<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:orientation="horizontal" >
    <ImageView 
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/hot_mv_img"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        />
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_movie"
            />
        <TextView 
            android:paddingLeft="2dp"
            android:textStyle="bold"
             android:textColor="#000000"
            android:text="你好"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:id="@+id/hot_mv_name_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        </LinearLayout>
        
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_marginTop="3dp"
             >
             <TextView 
                 android:textSize="12sp"
                 android:textColor="#6E6E6E"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/hot_tag1"
                 android:text="标签:"
                 />
             <TextView 
                 android:textSize="12sp"
                 android:textColor="#6E6E6E"
                 android:singleLine="true"
                 android:ellipsize="end"
                 android:text="标签"
                 android:layout_toRightOf="@+id/hot_tag1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/hot_tag"
                 />
              <TextView 
                  android:textSize="12sp"
                 android:textColor="#6E6E6E"
                  android:layout_below="@+id/hot_tag1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/hot_time1"
                 android:text="时长:"
                 />
             <TextView 
                 android:textSize="12sp"
                 android:textColor="#6E6E6E"
                 android:layout_below="@+id/hot_tag1"
                 android:text="标签"
                 android:layout_toRightOf="@+id/hot_time1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/hot_time"
                 />
         </RelativeLayout>
    </LinearLayout>

</LinearLayout>